<h3>ユーザー編集</h3>

<%= render "shared/error",obj:@schedule %>

<%= form_for @schedule do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_time ,"開始日" %></th>
      <td><%= f.date_field :start_time %></td>
    </tr>
    <tr>
      <th><%= f.label :finish_time ,"終了日" %></th>
      <td><%= f.date_field :finish_time %></td>
    </tr>
    <tr>
      <th><%= f.label :all_day ,"終日" %></th>
      <td><%= f.check_box :all_day,{},checked_value= "○",unchecked_value= "" %><br><%= "終日の場合はチェックを入れます" %></td>
    </tr>
    <tr>
      <th><%= f.label :schedule_memo ,"スケジュールメモ"  %></th>
      <td><%= f.text_area :schedule_memo %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= f.submit "スケジュールの編集を完了する" %></li>
      <li><%= link_to "ユーザー情報一覧に戻る", :schedules %></li>
    </ul>
  </div>
<% end %>
